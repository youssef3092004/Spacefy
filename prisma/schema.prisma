generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  STAFF
  CUSTOMER
  OWNER
  DEVELOPER
}

enum PaymentMethod {
  CASH
  BANK
  INSTAPAY
  CARD
}

enum ApprovalSource {
  SYSTEM
  USER
}

enum PayrollStatus {
  PENDING
  APPROVED
  PAID
  REJECTED
}

enum Language {
  EN
  AR
}

enum SpaceType {
  PRIVATE
  PUBLIC
  DESK
  MEETING
  VIP
  OTHER
}

enum DeviceType {
  PC
  LAPTOP
  PS4_2
  PS4_4
  PS5_2
  PS5_4
  XBOX_ONE
  XBOX_SERIES_S
  XBOX_SERIES_X
  NINTENDO_SWITCH
  VR_HEADSET
  SIMULATOR
  TV
  PROJECTOR
  TABLET
  SMART_BOARD
  SOUND_SYSTEM
  CAMERA
  MICROPHONE
  OTHER
}

enum ToolType {
  CONTROLLER
  HEADSET
  STEERING_WHEEL
  PEDALS
  PING_PONG
  BILLIARDO
  BOARD_GAME
  OTHER
}

enum PricingType {
  PER_HOUR
  PER_SESSION
  PER_GAME
}

enum BillingInterval {
  MONTHLY
  YEARLY
}

enum PlanType {
  FREE
  PRO
  ENTERPRISE
}

// fix it to branch not business
model BusinessSettings {
  id         String @id @default(uuid())
  businessId String @unique

  defaultLanguage      Language @default(EN)
  notificationsEnabled Boolean  @default(true)
  autoApprovePayroll   Boolean  @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
}

model User {
  id           String   @id @default(uuid())
  roleId       String
  name         String
  phone        String   @unique
  email        String   @unique
  password     String
  profileImage String?  @default("https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  role                  Role                   @relation(fields: [roleId], references: [id])
  userPermissions       UserPermission[]
  businesses            Business[]
  staffProfile          StaffProfile?
  payrolls              Payroll[]
  BranchUserPermissions BranchUserPermission[]

  @@index([roleId])
}

model StaffProfile {
  id         String   @id @default(uuid())
  userId     String   @unique
  branchId   String
  baseSalary Float
  hireDate   DateTime
  position   String
  department String?
  nationalId Json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  branch   Branch    @relation(fields: [branchId], references: [id], onDelete: Cascade)
  payrolls Payroll[]

  @@index([branchId])
  @@index([position])
  @@index([department])
}

model BranchUserPermission {
  id           String   @id @default(uuid())
  branchId     String
  userId       String
  permissionId String
  isAllowed    Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  branch     Branch     @relation(fields: [branchId], references: [id], onDelete: Cascade)
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@unique([branchId, userId, permissionId])
  @@index([isAllowed])
  @@index([branchId])
  @@index([userId])
  @@index([permissionId])
}

model Payroll {
  id             String @id @default(uuid())
  staffProfileId String

  grossSalary Decimal @db.Decimal(12, 2) // baseSalary + bonus + overtime
  bonus       Decimal @db.Decimal(12, 2)
  overtime    Decimal @default(0)
  deductions  Decimal @default(0)
  netSalary   Decimal // grossSalary - deductions

  method PaymentMethod
  status PayrollStatus @default(PENDING)

  month Int
  year  Int

  approvedById String?
  approvedAt   DateTime?
  paidAt       DateTime?

  createdAt DateTime @default(now())

  staffProfile StaffProfile @relation(fields: [staffProfileId], references: [id])
  approvedBy   User?        @relation(fields: [approvedById], references: [id])

  @@unique([staffProfileId, month, year])
  @@index([status])
  @@index([month, year])
  @@index([approvedById])
  @@index([staffProfileId])
}

model Role {
  id          String   @id @default(uuid())
  name        UserRole @unique
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  permissions RolePermission[]
  users       User[]
}

model Permission {
  id          String   @id @default(uuid())
  name        String   @unique
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  roles                 RolePermission[]
  userPermissions       UserPermission[]
  BranchUserPermissions BranchUserPermission[]
}

model RolePermission {
  id           String   @id @default(uuid())
  roleId       String
  permissionId String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  role       Role       @relation(fields: [roleId], references: [id])
  permission Permission @relation(fields: [permissionId], references: [id])

  @@index([roleId])
  @@index([permissionId])
}

model UserPermission {
  id           String   @id @default(uuid())
  userId       String
  permissionId String
  isAllowed    Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@unique([userId, permissionId])
  @@index([isAllowed])
  @@index([userId])
  @@index([permissionId])
}

model Business {
  id        String   @id @default(uuid())
  name      String
  ownerId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner            User              @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  // subscriptions Subscription[]
  branches         Branch[]
  businessSettings BusinessSettings?

  @@index([ownerId])
}

model Branch {
  id          String    @id @default(uuid())
  // planId     String
  businessId  String
  name        String
  address     String
  image       String?   @default("")
  isActive    Boolean   @default(true)
  openingTime DateTime?
  closingTime DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  // plan     Plan     @relation(fields: [planId], references: [id])

  // devices       Device[]
  // tools         Tool[]
  // visits        Visit[]
  // staffProfiles StaffProfile[]
  // revenues      Revenue[]
  // expenses      Expense[]
  staffProfiles         StaffProfile[]
  spaces                Space[]
  devices               Device[]
  tools                 Tool[]
  BranchUserPermissions BranchUserPermission[]

  // @@index([planId])
  @@index([businessId])
}

model BlacklistedToken {
  id        String   @id @default(uuid())
  token     String   @unique
  expiredAt DateTime
  createdAt DateTime @default(now())
}

model Space {
  id              String    @id @default(uuid())
  branchId        String
  // planId    String
  name            String
  type            SpaceType
  customTypeLabel String?
  image           String    @default("https://media.istockphoto.com/id/1472933890/vector/no-image-vector-symbol-missing-available-icon-no-gallery-for-this-moment-placeholder.jpg?s=2048x2048&w=is&k=20&c=Qw0wGz-a6BpwFjaoxtkjgsf75C-DeOYs7GFPU8O9z20=")
  capacity        Int
  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  branch       Branch        @relation(fields: [branchId], references: [id], onDelete: Cascade)
  // plan         Plan          @relation(fields: [planId], references: [id])
  // pricingRules PricingRule[]
  // @@index([planId])
  devices      Device[]
  pricingRules PricingRule[]
  tools        Tool[]

  @@index([branchId])
}

model Device {
  id              String      @id @default(uuid())
  branchId        String
  // planId          String
  spaceId         String?
  type            DeviceType
  customTypeLabel String?
  image           String      @default("https://media.istockphoto.com/id/1472933890/vector/no-image-vector-symbol-missing-available-icon-no-gallery-for-this-moment-placeholder.jpg?s=2048x2048&w=is&k=20&c=Qw0wGz-a6BpwFjaoxtkjgsf75C-DeOYs7GFPU8O9z20=")
  priceType       PricingType @default(PER_HOUR)
  price           Decimal     @default(0) @db.Decimal(12, 2)
  isActive        Boolean     @default(true)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  branch       Branch        @relation(fields: [branchId], references: [id], onDelete: Cascade)
  space        Space?        @relation(fields: [spaceId], references: [id], onDelete: Cascade)
  // @@index([planId])
  pricingRules PricingRule[]

  // plan   Plan   @relation(fields: [planId], references: [id])
  @@index([branchId])
  @@index([spaceId])
}

model Tool {
  id       String @id @default(uuid())
  branchId String
  spaceId  String
  // planId   String

  name            String
  type            ToolType
  customTypeLabel String?
  image           String   @default("https://media.istockphoto.com/id/1472933890/vector/no-image-vector-symbol-missing-available-icon-no-gallery-for-this-moment-placeholder.jpg?s=2048x2048&w=is&k=20&c=Qw0wGz-a6BpwFjaoxtkjgsf75C-DeOYs7GFPU8O9z20=")
  pricePerSession Decimal  @db.Decimal(10, 2)
  isActive        Boolean  @default(true)

  /**
   * ðŸ§¾ Audit fields
   */
  createdBy String
  updatedBy String
  deletedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  branch       Branch        @relation(fields: [branchId], references: [id], onDelete: Cascade)
  space        Space         @relation(fields: [spaceId], references: [id], onDelete: Cascade)
  // plan         Plan          @relation(fields: [planId], references: [id])
  // pricingRules PricingRule[]
  pricingRules PricingRule[]

  @@index([branchId])
  // @@index([planId])
  @@index([deletedAt])
}

model PricingRule {
  id   String @id @default(uuid())
  name String

  pricingType PricingType

  minDurationMinutes Int?
  maxDurationMinutes Int?

  minPlayers Int?
  maxPlayers Int?

  price    Decimal @db.Decimal(10, 2)
  currency String  @default("EGP")

  isActive  Boolean @default(true)
  isPackage Boolean @default(false)

  // Target (ONLY ONE should be set)
  spaceId  String?
  deviceId String?
  toolId   String?

  space  Space?  @relation(fields: [spaceId], references: [id], onDelete: Cascade)
  device Device? @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  tool   Tool?   @relation(fields: [toolId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([spaceId])
  @@index([deviceId])
  @@index([toolId])
  @@index([isActive])
  @@index([pricingType])
  @@index([isPackage])
  @@index([spaceId, isActive])
  @@index([deviceId, isActive])
  @@index([toolId, isActive])
}

model Plan {
  id          String   @id @default(uuid())
  name        String   @unique
  type        PlanType
  description String?

  price           Decimal         @db.Decimal(10, 2)
  currency        String          @default("EGP")
  billingInterval BillingInterval @default(MONTHLY)
  trialDays       Int?

  isActive Boolean @default(true)
  isPublic Boolean @default(true)

  maxBranches Int?
  maxSpaces   Int?
  maxDevices  Int?
  maxTools    Int?
  maxUsers    Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([isActive])
  @@index([billingInterval])
}
